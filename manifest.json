{
    "name": "Up Index Q",
    "description": "Chrome extension to show Bilibili likes - view count precentage",
    "version": "0.2.0",
    "manifest_version": 3,
    "icons": {
        "16": "./icon.png",
        "32": "./icon.png",
        "48": "./icon.png",
        "128": "./icon.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "options_page": "./options.html",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": ["tabs", "scripting"],
    "host_permissions": ["https://www.bilibili.com/"]
}
